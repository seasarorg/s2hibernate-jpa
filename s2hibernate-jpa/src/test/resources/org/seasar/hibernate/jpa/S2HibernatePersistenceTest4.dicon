<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//SEASAR//DTD S2Container 2.4//EN"
	"http://www.seasar.org/dtd/components24.dtd">
<components>

	<component class="org.seasar.framework.convention.impl.NamingConventionImpl"/>

	<component name="project" class="org.seasar.framework.container.cooldeploy.impl.CoolProjectImpl">
		<property name="rootPackageName">"org.seasar.hibernate.jpa"</property>
	</component>

	<component name="detector" class="org.seasar.framework.jpa.PersistenceClassAutoDetector">
		<initMethod name="addProject">
			<arg>project</arg>
		</initMethod>
	</component>			
	
	<component class="org.seasar.hibernate.jpa.S2HibernateConfiguration">
		<initMethod name="addPersistenceClassAutoDetector">
			<arg>detector</arg>
		</initMethod>
	</component>

</components>
